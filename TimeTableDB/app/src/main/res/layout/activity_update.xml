<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#252525"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Update_txt_Title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="TimeTable"
        android:textColor="#ffbb00"
        android:textSize="20dp"
        android:background="#000000"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="120dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/Update_spinner_starttime"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffbb00"
                android:textSize="30dp"
                android:layout_height="60dp"/>
            <Spinner
                android:id="@+id/Update_spinner_timelength"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffbb00"
                android:textSize="20dp"
                android:layout_height="60dp"/>
            <Spinner
                android:id="@+id/Update_spinner_day"
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ffbb00"
                android:textSize="20dp"
                android:layout_height="60dp"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/Update_btn_update"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Update"
        android:textSize="23dp"
        android:textColor="#ffbb00"
        android:background="@drawable/border"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

    <Button
        android:id="@+id/Update_btn_delete"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Delete"
        android:textSize="23dp"
        android:textColor="#ffbb00"
        android:background="@drawable/border"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />

    <LinearLayout
        android:id="@+id/Update_Linear1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/Update_txt_Title"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="과목 : "
            android:textColor="#ffbb00"
            android:layout_marginLeft="10dp"
            android:textSize="23dp"/>
        <EditText
            android:id="@+id/Update_edit_subject"
            android:layout_width="fill_parent"
            android:textSize="23dp"
            android:textColor="#ffbb00"
            android:layout_height="60dp" />
    </LinearLayout>

</RelativeLayout>